{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ref</th>
                <th>Email</th>
                <th>Cin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.ref }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.cin }}</td>
                <td>
                    <a href="{{ path('user_show', {'ref': user.ref}) }}">show</a>
                    <a href="{{ path('user_edit', {'ref': user.ref}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
